@model AnisMasterpieces.Web.ViewModels.Categories.CategoryNameAndTabNameViewModel
@using AnisMasterpieces.Services;
@using AnisMasterpieces.Common;
@{
    ViewData["Title"] = Model.Name;
}

<div class="center-align">
    <h1>@Model.Name</h1>
    @foreach (var tab in Model.Tabs)
    {
        <div class="inline-form">
            <a asp-controller="Tabs" asp-action="Id" asp-route-id=@tab.Id asp-route-title="@ConvertService.CyrillicToLatin(tab.Name, true)">
                <h2>@tab.Name</h2>
                <img src="@string.Format(GlobalConstants.CloudUrlTemplate, tab.ImageUrl)">
                <span>@tab.Description</span>
            </a>
        </div>
    }
</div>
