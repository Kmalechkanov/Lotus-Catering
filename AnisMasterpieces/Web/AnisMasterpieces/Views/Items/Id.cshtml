@model AnisMasterpieces.Web.ViewModels.Items.ItemViewModel
@using AnisMasterpieces.Common;
@{
    ViewData["Title"] = Model.Name;
}

<div class="oneline-flex center-align">
    <img src="@string.Format(GlobalConstants.CloudUrlTemplate, Model.ImageUrl)" class="half-width oval-img">
    <div class="half-width some-padding">
        <div class="oneline-flex">
            <h1 class="more-than-half-width some-padding">@Model.Name</h1>
            <div class="less-than-half-width some-padding">
                <p>Сподели:</p>
                <a href="#">F</a>
                <a href="#">Y</a>
            </div>
        </div>
        <div>
            <h3>Добави в количката:</h3>

            <h3>Цена на една хапка: @Model.Price лв.</h3>
            <h3>Общо цена: --,-- лв.</h3>
            <div>
                <form asp-controller="Cart" asp-action="Id" asp-route-id=@User.Identity.Name>
                    <label for="count">Брой хапки:<br /></label>
                    <input type="number" id="count" name="count" min="10" max="300" step="10" value="10">
                    <input type="submit" value="Добави" />
                </form>
            </div>
        </div>
    </div>
</div>
<h3>@Model.Description</h3>