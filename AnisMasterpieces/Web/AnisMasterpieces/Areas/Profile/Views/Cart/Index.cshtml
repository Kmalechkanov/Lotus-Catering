@model AnisMasterpieces.Web.ViewModels.Cart.CartWithItemsViewModel
@using AnisMasterpieces.Common;
@using AnisMasterpieces.Services;
@{
    ViewData["Title"] = "Количка";
}

<h1>Количка</h1>
<form method="post" asp-action="Update" enctype="multipart/form-data">
    <table class="table-items">
        <thead>
            <tr>
                <th>Снимка</th>
                <th>Име</th>
                <th>Цена</th>
                <th>Количество</th>
                <th>Общо цена</th>
                <th>Линкове</th>
            </tr>
        </thead>
            <tbody>
        @foreach (var item in Model.Items)
        {
                <tr>
                    <td data-title="Снимка"><img src="@string.Format(GlobalConstants.CloudUrlTemplate, item.ImageUrl)" class="img-icon"></td>
                    <td data-title="Име">@item.Name</td>
                    <td data-title="Цена">@item.Price лв.</td>
                    <td data-title="Количество" style="min-width:150px;">
                        <div class="input-group">
                            <input type="button" value="-" class="button-minus" data-field="Quantity" />
                            <input type="number" id="Quantity" name="Quantity" min="10" max="300" step="10" value="@item.Quantity" class="quantity-field">
                            <input type="button" value="+" class="button-plus" data-field="Quantity">
                        </div>
                    </td>
                    <td data-title="Общо цена">@(double.Parse(item.Price) * item.Quantity) лв.</td>
                    <td data-title="Линкове">
                        <input type="text" name="ItemId" value="@item.Id" hidden />
                        <input type="text" name="IsRemoved" value="false" hidden />
                        <a class="form-button fit-width" asp-area="Home" asp-controller="Items" asp-action="Id" asp-route-id=@item.Id asp-route-title="@ConvertService.CyrillicToLatin(item.Name, true)" alt="Прегледай"><i class="fas fa-search"></i> Преглед</a>
                        <button class="check-id form-button fit-width"><i class="fas fa-trash-alt"></i> Премахни</button>
                    </td>
                </tr>
        }
        <tr>
            <th colspan="3">
                Общо Количество ---&gt;
            </th>
            <th>
                @Model.Items.Sum(x => x.Quantity) хапки.
            </th>
            <th>
                @Model.Items.Sum(x => x.Quantity * double.Parse(x.Price)) лв.
            </th>
            <th>
                &lt;--- Общо Цена
            </th>
        </tr>
        </tbody>
    </table>
    <button class="form-button" type="submit">Запази</button>
</form>

@section Scripts {
    <script src="~/js/numberInput.js"></script>
    <script>
        $('.check-id').on('click', function (e) {
            e.preventDefault();
            let parent = $(this).parent();
            let child = parent.children()[1];
            child.setAttribute('value', 'true');

            let parentParent = parent.parent()[0];
            parentParent.classList.add('hidden');
            parentParent.setAttribute('hidden', '');
        });
    </script>
}