@model LotusCatering.Web.ViewModels.Profile.ProfileViewModel
@{
    ViewData["Title"] = "Профил";
}

<h1>Профил</h1>
<div>
    <hr />
    <div class="oneline-flex">
        <div class="settings-div">
            <ul>
                <li><a asp-action="Manage" asp-controller="Account" asp-area="Identity">Настройки</a></li>
                <li><a asp-controller="Cart">Количка</a></li>
                <li><a asp-action="History" asp-controller="Purchase">Покупки</a></li>
            </ul>
        </div>
        <div>
            <h1><strong>Потребителско име: </strong>@Model.Username</h1>
            <h2><strong>Брой поръчки: </strong>@Model.TotalPurchases</h2>
        </div>
    </div>
</div>