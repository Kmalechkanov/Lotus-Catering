@page
@model IndexModel
@{
    ViewData["Title"] = "Профил";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div>
    <div>
        <form id="profile-form" method="post">
            <div asp-validation-summary="All"></div>
            <div>
                <label asp-for="Username"></label>
                <input asp-for="Username" disabled />
            </div>
            <div>
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber"  />
                <span asp-validation-for="Input.PhoneNumber"></span>
            </div>
            <button id="update-profile-button" type="submit" class="form-button">Запази</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}