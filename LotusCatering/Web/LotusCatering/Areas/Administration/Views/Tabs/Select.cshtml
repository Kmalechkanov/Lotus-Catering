@model LotusCatering.Web.ViewModels.Tabs.TabSelectViewModel
@{
    ViewData["Title"] = "Admin Panel";
    var tabs = Model.Tabs.Select(x => new SelectListItem(x.Name, x.Id));
}

<form method="post" class="admin-form" asp-action="Select" enctype="multipart/form-data">
    <hr />
    <h1>Избери подкатегория</h1>
    <hr />
    <div asp-validation-summary="All" class="notification"></div>
    <div>
        <label asp-for="Id">Подкатегория</label>
        <select asp-for="Id" asp-items="tabs"></select>
        <input asp-for="ReturnUrl" hidden />
    </div>
    <div>
        <button class="form-button" type="submit">Избери</button>
    </div>
</form>

